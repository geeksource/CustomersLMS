<Page x:Class="CustomersLMS.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CustomersLMS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Margin="20" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" >Command</Label>
        <TextBox  Grid.Row="0" VerticalAlignment="Center" Height="30" Grid.Column="1" Name="txtCommand" ></TextBox>
        <Button Name="btnExecute" Grid.Row="0" Grid.Column="2" Height="30" Width="100" Margin="10" HorizontalAlignment="Left" Content="Execute" Click="BtnExecute_Click"/>
        <RichTextBox Grid.Row="1" Grid.Column="1" Name="commandOutputArea" >
            
        </RichTextBox>
    </Grid>
</Page>
